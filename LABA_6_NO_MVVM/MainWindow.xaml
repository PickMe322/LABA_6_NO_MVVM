<Window x:Class="лаба_6_норм.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:лаба_6_норм"
        mc:Ignorable="d"
        Title="ФильмоОценкаРус" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox Header="Список фильмов" Grid.Row="0" Grid.Column="0" >
            <DataGrid CanUserAddRows="True" AutoGenerateColumns="False" ColumnWidth="*" x:Name="moviesDataGrid" ItemsSource="{Binding movie}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Width="1.2*" Binding="{Binding Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Жанр" Width="0.9*" Binding="{Binding Genre}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Режиссер" Width="*" Binding="{Binding Director.Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Год" Width="0.5*" Binding="{Binding Publish_year}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Рейтинг" Width="0.7*" Binding="{Binding Rate}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Header="Добавить новый фильм в коллекцию" Grid.Row="0" Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" FontSize="16" Text="Название фильма" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="1" Grid.Column="0" FontSize="16" Text="Жанр" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="2" Grid.Column="0" FontSize="16" Text="Год выпуска" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="3" Grid.Column="0" FontSize="16" Text="Режиссер" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="4" Grid.Column="0" FontSize="16" Text="Рейтинг" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <TextBox x:Name="Film_name_TB" Grid.Row="0" Grid.Column="1" Height="auto" Width="auto" Margin="2 3 0 3"/>
                <TextBox x:Name="Publish_year_TB" Grid.Row="2" Grid.Column="1" Height="auto" Width="auto" Margin="2 3 0 3"/>
                <TextBox x:Name="Director_TB" Grid.Row="3" Grid.Column="1" Height="auto" Width="auto" Margin="2 3 0 3"/>
                <TextBox x:Name="Rate_TB" Grid.Row="4" Grid.Column="1" Height="auto" Width="auto" Margin="2 3 0 3"/>

                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="GenreComboBox" Cursor ="Hand" Margin="2 3 0 3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Button x:Name="Add_but" Content="Добавить" Grid.Column="0" Grid.Row="5" FontSize="14" Background="LightGreen" Margin="0 3 2 3" Click="Add_Click">
                    <Button.ToolTip>
                        <ToolTip Content="Добавляет фильм в список фильмов"></ToolTip>
                    </Button.ToolTip>
                </Button>
                <Button x:Name="Del_but" Content="Удалить" FontSize="14" Grid.Column="1" Grid.Row="5" Background="OrangeRed" Margin="2 3 0 3" Click="Del_Click">
                    <Button.ToolTip>
                        <ToolTip Content="Удаляет фильм из списка фильмов"></ToolTip>
                    </Button.ToolTip>
                </Button>
                <Button x:Name="Show_but" Content="Показать всё" FontSize="14" Grid.Column="0" Grid.Row="6" Margin="0 3 2 3" Click="Show_all_Click">
                    <Button.ToolTip>
                        <ToolTip Content="Показывает все фильмы, который уже добавлены в список фильмов"></ToolTip>
                    </Button.ToolTip>
                </Button>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="1" Grid.Column="0" Header="Поиск и сортировка">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ComboBox Grid.Row="0" x:Name="GenreComboBox2" Margin="0 7 0 3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Button x:Name="Find_genre_but" Content="Поиск по жанру" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="12" Grid.Row="1" Margin="0 5 0 5" Click="Genre_Click"/>
                </Grid>
                <TextBlock Text="Выберите жанр:" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="16" Margin="0 7 0 0"/>
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0 5 5 3" x:Name="From_rel_TB"/>
                        <TextBox Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="5 5 0 3" x:Name="To_rel_TB"/>
                    </Grid>
                    <Button x:Name="Find_relize_date_but" Content="Поиск по дате релиза" Grid.Row="1" Margin="0 7 0 5" Click="Relize_Click"/>
                </Grid>
                <TextBlock Text="Поиск по дате релиза с...по годы" Grid.Column="0" Grid.Row="1" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                <TextBlock Text="Сортировка по рейтингу" Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Center" />
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Content="По возрастанию" VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.Column="0" Margin="0 0 5 0" x:Name="By_incr_but" Click="Sort_incr_Click"/>
                    <Button Grid.Column="1" Content="По убыванию" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="5 0 0 0" x:Name="By_desc_but" Click="Sort_desc_Click"/>
                </Grid>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="1" Grid.Column="1" Header="Список режиссеров">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <DataGrid x:Name = "directorsDataGrid" CanUserAddRows="True" AutoGenerateColumns="False" ColumnWidth="*" HorizontalScrollBarVisibility="Visible" Margin="0,0,0,25" Grid.RowSpan="2">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ФИО" Width="0.9*" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="Количество фильмов" Width="0.4*" Binding="{Binding FilmCount}"/>
                        <DataGridTextColumn Header="Средний рейтинг" Width="0.6*" Binding="{Binding AverageRate}"/>
                        <DataGridTextColumn Header="Год начала активности" Width="0.9*" Binding="{Binding StartActivityYear}"/>
                        <DataGridTextColumn Header="Год окончания активности" Width="0.9*" Binding="{Binding EndActivityYear}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Grid.Row="1" x:Name="Form_but" Content="Сформировать список" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Click="Form_Click"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>